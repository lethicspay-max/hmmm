rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Helper function to check if user is corporate
    function isCorporate() {
      return isAuthenticated() &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'corporate';
    }

    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Users Collection
    match /users/{userId} {
      // Allow anyone to read corporate users (for public company pages)
      // Users can read their own profile
      // Admins can read any profile
      allow read: if (
        resource.data.role == 'corporate' ||
        (isAuthenticated() && (isOwner(userId) || isAdmin()))
      );

      // Only admins can create users (registration handled via Firebase Auth + Cloud Functions)
      allow create: if isAdmin();

      // Users can update their own profile (limited fields)
      // Admins can update any user
      allow update: if isAdmin() || (
        isOwner(userId) &&
        // Prevent users from changing their role or status
        !request.resource.data.diff(resource.data).affectedKeys().hasAny(['role', 'status'])
      );

      // Only admins can delete users
      allow delete: if isAdmin();
    }

    // Products Collection
    match /products/{productId} {
      // Anyone can read active products (for public company pages)
      allow read: if true;

      // Only admins can write products
      allow create, update, delete: if isAdmin();
    }

    // Corporate Settings Collection
    match /corporateSettings/{settingId} {
      // Anyone can read settings (for public company pages)
      // This allows employees to see their company's branding before logging in
      allow read: if true;

      // Only admins can write settings
      allow create, update, delete: if isAdmin();
    }

    // Corporate Product Settings Collection
    match /corporateProductSettings/{settingId} {
      // Anyone can read product settings (for public company pages)
      // This allows employees to see customized products before logging in
      allow read: if true;

      // Only admins can write product settings
      allow write: if isAdmin();
    }

    // Employees Collection
    match /employees/{employeeId} {
      // Anyone can read employees (needed for company subpage login/registration)
      // This allows employees to check if their email exists and login
      allow read: if true;

      // Anyone can create employees (for self-registration on company pages)
      // Admins and corporates can also create employees
      allow create: if true;

      // Admins and corporates can update their employees
      // Employees can update limited fields on their own profile
      allow update: if isAuthenticated() && (
        isAdmin() ||
        (isCorporate() && resource.data.corporateId == request.auth.uid) ||
        (isOwner(employeeId) && !request.resource.data.diff(resource.data).affectedKeys().hasAny(['corporateId', 'points']))
      );

      // Admins and corporates can delete employees
      allow delete: if isAuthenticated() && (
        isAdmin() ||
        (isCorporate() && resource.data.corporateId == request.auth.uid)
      );
    }

    // Orders Collection
    match /orders/{orderId} {
      // Admins can read all orders
      // Corporates can read orders from their employees
      // Employees can read their own orders
      allow read: if isAuthenticated() && (
        isAdmin() ||
        resource.data.corporateId == request.auth.uid ||
        resource.data.employeeId == request.auth.uid
      );

      // Admins can create orders (for testing)
      // Employees can create orders for themselves
      allow create: if isAuthenticated() && (
        isAdmin() ||
        request.resource.data.employeeId == request.auth.uid
      );

      // Only admins can update orders (status changes, etc.)
      allow update: if isAdmin();

      // Only admins can delete orders
      allow delete: if isAdmin();
    }

    // Tickets Collection
    match /tickets/{ticketId} {
      // Admins can read all tickets
      // Corporates can read their own tickets
      // Employees can read their own tickets
      allow read: if isAuthenticated() && (
        isAdmin() ||
        resource.data.corporateId == request.auth.uid ||
        resource.data.employeeId == request.auth.uid
      );

      // Anyone authenticated can create tickets
      allow create: if isAuthenticated();

      // Admins can update any ticket
      // Ticket creators can update their own tickets (limited fields)
      allow update: if isAuthenticated() && (
        isAdmin() ||
        (resource.data.employeeId == request.auth.uid &&
         !request.resource.data.diff(resource.data).affectedKeys().hasAny(['status', 'createdAt']))
      );

      // Only admins can delete tickets
      allow delete: if isAdmin();
    }

    // Point Transactions Collection
    match /pointTransactions/{transactionId} {
      // Admins can read all transactions
      // Corporates can read their own transactions
      // Employees can read their own transactions
      allow read: if isAuthenticated() && (
        isAdmin() ||
        resource.data.corporateId == request.auth.uid ||
        resource.data.employeeId == request.auth.uid
      );

      // Admins and corporates can create transactions
      allow create: if isAuthenticated() && (
        isAdmin() ||
        (isCorporate() && request.resource.data.corporateId == request.auth.uid)
      );

      // Only admins can update transactions
      allow update: if isAdmin();

      // Only admins can delete transactions
      allow delete: if isAdmin();
    }

    // Contact Submissions Collection
    match /contactSubmissions/{submissionId} {
      // Only admins can read contact submissions
      allow read: if isAdmin();

      // Anyone can create contact submissions (for contact form)
      allow create: if true;

      // Only admins can update submissions
      allow update: if isAdmin();

      // Only admins can delete submissions
      allow delete: if isAdmin();
    }

    // Block all other collections by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
